{
    "name": "Paywall Halt!",
    "description": "Flags Paywalls",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/*",
                "https://www.duckduckgo.com/*",
                "https://google.com/*",
                "https://duckduckgo.com/*",
                "https://bing.com/*",
                "https://www.bing.com/*",
                "https://yahoo.com",
                "https://www.yahoo.com"
            ],
            "all_frames": true,
            "js": ["scripts/content_script.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "pages/popup.html"
    },
    "options_page": "pages/options.html",
    "permissions": ["storage"],
    "background": {
        "service_worker": "scripts/background.js"
    }
}
